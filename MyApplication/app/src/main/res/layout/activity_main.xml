<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#21c0ff">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf=it "parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/Const_1"
        >
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcom back"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/Const_1"
        android:id="@+id/Text_1"
        >
    </TextView>
    <LinearLayout
        android:layout_width="100sp"
        android:layout_height="40sp"
        android:background="@drawable/btn_stroke"
        android:orientation="horizontal"
        android:layout_weight="5"
        android:id="@+id/Linear_1"
        app:layout_constraintTop_toBottomOf="@+id/Text_1"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@mipmap/pic1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            >
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Google"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="100sp"
        android:layout_height="40dp"
        android:background="@drawable/btn_stroke"
        android:orientation="horizontal"
        android:layout_weight="5"
        app:layout_constraintLeft_toRightOf="@+id/Linear_1"
        app:layout_constraintTop_toBottomOf="@+id/Text_1"
        android:layout_marginLeft="30dp"

        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:background="@mipmap/pic2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"
            >
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="        Username or Email"
        app:layout_constraintTop_toBottomOf="@+id/Linear_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/Text_2"
        >

    </TextView>
    <EditText
        android:id="@+id/EditText_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Username or Email"
        android:background="@drawable/btn_1"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="        Username or Email"
        app:layout_constraintTop_toBottomOf="@+id/EditText_id"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/Text_3"
        >

    </TextView>
    <EditText
        android:id="@+id/EditText_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Username or Email"
        android:background="@drawable/btn_1"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Text_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </EditText>
    <LinearLayout
        android:id="@+id/LinearLayout_1"
        android:layout_width="100sp"
        android:layout_height="30dp"
        android:background="@drawable/btn_2"
        app:layout_constraintTop_toBottomOf="@id/EditText_password"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Login"
            android:layout_gravity="center"
            android:gravity="center"
            >

        </TextView>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

    </TextView>


</androidx.constraintlayout.widget.ConstraintLayout>
